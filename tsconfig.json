{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "target": "es6",
    "module": "commonjs",
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}